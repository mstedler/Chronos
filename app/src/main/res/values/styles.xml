<resources>

    <style name="Theme.Chronos" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Chronos.Splash" parent="Theme.Chronos">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Widget.Chronos.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TextAppearance.Chronos.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/labelle_aurore</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Chronos.CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Chronos.ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/labelle_aurore</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="Widget.Chronos.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Chronos.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.Chronos.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.Chronos.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/shape_dialog</item>
    </style>
    <style name="TextAppearance.Chronos.Dialog.Title" parent="android:Widget.TextView" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Chronos.Badge" parent="android:Widget.TextView" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <string name="revisoes">Revis√µes</string>
</resources>
